<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2 style="padding:10px"> Student Admission Report</h2><br/><br/>
                            <span style="padding: 10px; font-size:25px;" t-field="doc.student_name"/>
                            <span style="padding: 150px; font-size:25px;" t-field="doc.address"/>
                            <br/><br/><br/><br/><br/><br/>
                        </div>

                        <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Fee Type</th>
                                <th>Amount</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.fee_structure_ids" t-as="line">
                                <tr>
                                    <td><t t-esc="line.fee_type"/></td>
                                    <td><t t-esc="line.amount"/></td>
                                    <td><t t-esc="line.date_due"/></td>
                                </tr>
                            </t>
                        </tbody>
                        </table>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>